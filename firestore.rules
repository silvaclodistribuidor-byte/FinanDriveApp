rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isAdmin() {
      return signedIn()
        && request.auth.token.email != null
        && request.auth.token.email.matches('(?i)^silvaclodistribuidor@gmail\\.com$');
    }
    function isOwner(docId) { return signedIn() && request.auth.uid == docId; }

    match /driversData/{driverId} {
      // admin pode ler todos
      allow read: if isOwner(driverId) || isAdmin();

      // dono pode criar/atualizar o próprio doc
      // mas NÃO pode setar approved
      allow create: if isOwner(driverId);

      allow update: if isAdmin()
        || (isOwner(driverId)
            && !(request.resource.data.access.status == "approved"));

      allow delete: if false;
    }

    match /adminDevices/{token} {
      allow read, write: if isAdmin();
    }
  }
}
